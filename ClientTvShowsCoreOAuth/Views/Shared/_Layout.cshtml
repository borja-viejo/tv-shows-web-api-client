<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client TvShows Core OAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" media="all" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap-star-rating/dist/css/star-rating.css" media="all" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap-star-rating/dist/themes/krajee-svg/theme.css" media="all" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">TvShows (Borja)™</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button"
                                id="navbarDDMenuTvShows" data-bs-toggle="dropdown" aria-expanded="false">
                                TV Shows
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDDMenuTvShows">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Index">Todas las series</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="7">Campeones</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="8">Como conocí a vuestra madre</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="1">Juego de tronos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="9">La casa de papel</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="4">Narcos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="3">Stranger Things</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="6">The Big Bang Theory</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="5">The Boys</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="Details" asp-route-idserie="2">The Mandalorian</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" role="button"
                                id="navbarDDMenuPersonajes" data-bs-toggle="dropdown" aria-expanded="false">
                                Personajes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDDMenuPersonajes">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Personajes" asp-action="Index">Todos los personajes</a></li>
                                @if (User.Identity.IsAuthenticated){
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Personajes" asp-action="Create">Añadir personaje</a></li>
                                    @*<li><a class="dropdown-item" asp-area="" asp-controller="Personajes" asp-action="Edit">Editar personaje</a></li>*@
                                }
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav justify-content-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                    <input type="button" class="btn btn-light rounded-pill" value="Ver perfil" />
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Manage" asp-action="Logout">
                                    <input type="button" class="btn btn-danger rounded-pill" value="Cerrar sesión" />
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Manage" asp-action="Login">
                                    <input type="button" class="btn btn-primary rounded-pill" value="Iniciar sesión" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2022 - Borja Viejo Cabanillas
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootstrap-star-rating/dist/js/star-rating.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap-star-rating/dist/themes/krajee-svg/theme.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap-star-rating/dist/js/locales/es.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
